<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_hupun" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit.hupun</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='product_variant_count']" position="before">
                <button name="action_sync_from_hupun" string="Sync from Hupun" type="object" class="btn-secondary"/>
                <button name="action_push_package_to_hupun" string="Push Package to Hupun" type="object" class="btn-secondary" invisible="not is_hupun_package"/>
            </xpath> -->
            <xpath expr="//div[@name='options']" position="after">
                <group string="Hupun Integration" name="hupun_integration">
                    <field name="hupun_goods_code"/>
                    <field name="is_hupun_synced" readonly="1"/>
                    <field name="is_hupun_package"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Hupun Package Content" name="hupun_package_content" invisible="not is_hupun_package">
                    <field name="hupun_package_line_ids">
                        <tree editable="bottom">
                            <!-- <field name="product_id"/> -->
                            <!-- <field name="quantity"/> -->
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_product_form_view_inherit_hupun" model="ir.ui.view">
        <field name="name">product.product.form.inherit.hupun</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="hupun_spec_code"/>
            </xpath>
        </field>
    </record>
</odoo>
