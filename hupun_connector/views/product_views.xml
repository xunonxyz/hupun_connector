<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_tree_view_inherit_hupun" model="ir.ui.view">
        <field name="name">product.product.tree.inherit.hupun</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <header>
                    <button name="action_push_to_hupun" display="always" string="Sync To Hupun" type="object"/>
                </header>
            </xpath>
        </field>
    </record>
    
</odoo>
