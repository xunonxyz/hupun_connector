<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_form_view_inherit_hupun" model="ir.ui.view">
        <field name="name">product.category.form.inherit.hupun</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group string="Hupun Integration" name="hupun_integration">
                    <field name="hupun_category_id"/>
                    <field name="is_hupun_synced" readonly="1"/>
                    <button name="action_pull_category_from_hupun" string="Link from Hupun" type="object" class="btn-secondary" invisible="is_hupun_synced"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
