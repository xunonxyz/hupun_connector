<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_hupun" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.hupun</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_push_purchase_to_hupun" string="Push to Hupun" type="object" class="btn-secondary" invisible="hupun_id"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Hupun Info" name="hupun_info">
                    <group>
                        <field name="hupun_id"/>
                        <field name="hupun_status"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
