<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hupun_sync_log_tree" model="ir.ui.view">
        <field name="name">hupun.sync.log.tree</field>
        <field name="model">hupun.sync.log</field>
        <field name="arch" type="xml">
            <tree string="Sync Logs" create="false" edit="false" delete="true">
                <field name="create_date"/>
                <field name="name"/>
                <field name="sync_type"/>
                <field name="status" widget="badge" decoration-success="status == 'success'" decoration-danger="status == 'failed'" decoration-warning="status == 'partial'" decoration-info="status == 'running'"/>
                <field name="summary"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

    <record id="view_hupun_sync_log_form" model="ir.ui.view">
        <field name="name">hupun.sync.log.form</field>
        <field name="model">hupun.sync.log</field>
        <field name="arch" type="xml">
            <form string="Sync Log" create="false" edit="false">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="running,success,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sync_type"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                        <group>
                            <field name="summary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="details"/>
                        </page>
                        <page string="Request Data">
                            <field name="request_data"/>
                        </page>
                        <page string="Response Data">
                            <field name="response_data"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

        <record id="action_hupun_sync_log" model="ir.actions.act_window">
            <field name="name">Sync Logs</field>
            <field name="res_model">hupun.sync.log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No sync logs found
                </p>
            </field>
        </record>

</odoo>
