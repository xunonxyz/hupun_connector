<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hupun_platform_bill_tree" model="ir.ui.view">
        <field name="name">hupun.platform.bill.tree</field>
        <field name="model">hupun.platform.bill</field>
        <field name="arch" type="xml">
            <tree string="Hupun Platform Bills">
                <field name="bill_no"/>
                <field name="bill_date"/>
                <field name="shop_name"/>
                <field name="bill_type"/>
                <field name="amount"/>
                <field name="currency"/>
            </tree>
        </field>
    </record>

    <record id="view_hupun_platform_bill_form" model="ir.ui.view">
        <field name="name">hupun.platform.bill.form</field>
        <field name="model">hupun.platform.bill</field>
        <field name="arch" type="xml">
            <form string="Hupun Platform Bill">
                <sheet>
                    <group>
                        <group>
                            <field name="bill_no"/>
                            <field name="bill_date"/>
                            <field name="shop_name"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency"/>
                            <field name="bill_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Remark">
                            <field name="remark"/>
                        </page>
                        <page string="Raw Data">
                            <field name="raw_data"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hupun_platform_bill" model="ir.actions.act_window">
        <field name="name">Hupun Platform Bills</field>
        <field name="res_model">hupun.platform.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Fetch platform bills from Hupun.
            </p>
        </field>
    </record>

    <menuitem id="menu_hupun_root" name="Hupun" web_icon="hupun_connector,static/description/icon.png" sequence="10"/>
    <menuitem id="menu_hupun_platform_bill" name="Platform Bills" parent="menu_hupun_root" action="action_hupun_platform_bill" sequence="10"/>
</odoo>
