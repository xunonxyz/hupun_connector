<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="res.groups.privilege" id="module_category_hupun">
            <field name="name">Hupun Connector</field>
            <field name="description">Manage Hupun Connector Access</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_hupun_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="module_category_hupun"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hupun_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="module_category_hupun"/>
            <field name="implied_ids" eval="[(4, ref('group_hupun_user'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
