<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_hupun" model="ir.module.category">
        <field name="name">Hupun Connector</field>
        <field name="description">Manage Hupun Connector Access</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_hupun_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_hupun"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_hupun_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hupun"/>
        <field name="implied_ids" eval="[(4, ref('group_hupun_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
